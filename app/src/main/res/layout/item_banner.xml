<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#2962FF"> <!-- Default Color -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/img_banner_icon"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tv_banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refer &amp; Earn"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_banner_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get â‚¹50 for every friend you invite!"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="CHECK NOW"
                android:textSize="10sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                app:cornerRadius="20dp"/>
        </LinearLayout>

        <!-- Icon on the right -->
        <ImageView
            android:id="@+id/img_banner_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_share"
            app:tint="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="0.8"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
