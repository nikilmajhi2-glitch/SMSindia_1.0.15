<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <!-- Header: Token Count (Royal Blue) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/app_primary"
        app:cardElevation="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <!-- Gold Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_launcher_background"
                app:tint="#FFC107"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Spins: "
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_spin_tokens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin &amp; Win Cash!"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use your coins to test your luck"
        android:textColor="@color/gray_text"
        android:textSize="14sp"/>

    <!-- Wheel Container -->
    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="30dp">

        <!-- IMPORTANT: You must provide LuckyWheelView.java -->
        <com.smsindia.app.ui.LuckyWheelView
            android:id="@+id/wheel_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Center Indicator / Button -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bg_circle_edit"
            app:tint="@color/app_primary"
            android:layout_gravity="center"/>
            
        <!-- The Stopper Arrow (Pointing Left) -->
        <!-- Tint changed to Black/Blue to be visible on light background -->
         <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/arrow_down_float"
            android:rotation="270"
            app:tint="@color/app_primary_dark"
            android:layout_gravity="center_vertical|end"/>

    </FrameLayout>

    <Button
        android:id="@+id/btn_spin_now"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SPIN NOW"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#FFC107"
        android:textColor="#000000"
        app:cornerRadius="30dp"/>

</LinearLayout>
