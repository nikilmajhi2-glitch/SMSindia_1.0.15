<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon Container -->
        <FrameLayout
            android:id="@+id/layout_icon_bg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_gray"> <!-- Default -->
            
            <ImageView
                android:id="@+id/img_tx_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/star_on"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Text Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_tx_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Check-in"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_tx_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 10:00 AM"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_tx_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ â‚¹5.0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
